<h1>Edit User</h1>

<%= form_with model: @user do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username, placeholder: "username" %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "e.g.@example.com" %>
  <%= form.label :password %>
  <%= form.password_field :password, placeholder: "*****" %>
  <%= form.submit "Submit" %>
<% end %>

<%= link_to "Users", users_path %>